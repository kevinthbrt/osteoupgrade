# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=votre_url_supabase
NEXT_PUBLIC_SUPABASE_ANON_KEY=votre_cle_anon_supabase

# Emailing
RESEND_API_KEY=votre_cle_api_resend
# Doit correspondre à un domaine validé dans Resend (ex: "OsteoUpgrade <no-reply@osteo-upgrade.fr>")
RESEND_FROM="OsteoUpgrade <no-reply@osteo-upgrade.fr>"
NEXT_PUBLIC_RESEND_FROM="OsteoUpgrade <no-reply@osteo-upgrade.fr>"

# Webhook Resend (pour emails entrants)
# Récupérer depuis Resend Dashboard > Inbound > Signing Secret
RESEND_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxx

# Email admin pour recevoir les emails (parrainage, support, etc.)
ADMIN_EMAIL=admin@osteo-upgrade.fr

# System.io Configuration
SYSTEMIO_API_KEY=votre_cle_api_systemio
SYSTEMIO_API_URL=https://systeme.io/api/v1

# Stripe Configuration
STRIPE_SECRET_KEY=votre_stripe_secret_key
STRIPE_WEBHOOK_SECRET=votre_stripe_webhook_secret

# Stripe Price IDs (récupérer depuis Stripe Dashboard > Products > Prices)
STRIPE_PRICE_SILVER_MONTHLY=votre_price_id_silver_monthly
STRIPE_PRICE_SILVER_ANNUAL=votre_price_id_silver_annual
STRIPE_PRICE_GOLD_ANNUAL=votre_price_id_gold_annual
STRIPE_PRICE_GOLD_ANNUAL_PROMO=votre_price_id_gold_promo

# Promo Gold (mettre "true" pour activer le prix promo à 399€)
STRIPE_GOLD_PROMO_ACTIVE=false

# Stripe Customer Portal Configurations (récupérer depuis Stripe Dashboard > Settings > Customer Portal)
STRIPE_PORTAL_CONFIG_ENGAGEMENT=votre_portal_config_engagement
STRIPE_PORTAL_CONFIG_LIBRE=votre_portal_config_libre

# Vercel Blob Storage (pour les uploads de fichiers)
# Cette variable est automatiquement générée par Vercel si vous activez Blob Storage
# Dashboard Vercel > Storage > Create > Blob > Le token sera automatiquement ajouté
BLOB_READ_WRITE_TOKEN=votre_token_vercel_blob

# Supabase Service Role Key (pour les opérations serveur avec bypass RLS)
# ATTENTION : Ne JAMAIS exposer cette clé côté client !
SUPABASE_SERVICE_ROLE_KEY=votre_service_role_key

# Note: Ces variables doivent être configurées dans Vercel
# Dashboard Vercel > Settings > Environment Variables
